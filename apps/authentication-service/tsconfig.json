{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",

    "declaration": true,
    "declarationMap": true,

    "outDir": "./dist",
    "strict": true,

    "skipLibCheck": true,
    "esModuleInterop": true,

    "typeRoots": [
      "../../node_modules/@types",
      "../../node_modules/@testing-library"
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"]
}
