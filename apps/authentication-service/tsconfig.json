{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2022",
    "moduleResolution": "node",
    "outDir": "dist",
    "module": "CommonJS",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "typeRoots": [
      "../../node_modules/@types",
      "../../node_modules/@testing-library"
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "references": [{ "path": "../../packages/shared-utils" }],
  "include": ["src/**/*"]
}
