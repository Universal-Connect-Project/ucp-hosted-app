{
  "name": "ucp-authentication-service",
  "version": "0.0.1",
  "description": "UCP Authentication Service",
  "scripts": {
    "dev": "npx -y nodemon ./src/index.ts",
    "dev:rate-limit": "RATE_LIMIT_TEST=true npm run dev",
    "dev:noRateLimit": "DISABLE_RATE_LIMITING=true npm run dev",
    "cypress:open": "cypress open --config specPattern='cypress/e2e/**/!(rateLimiting.cy.ts)'",
    "cypress:run": "cypress run --config specPattern='cypress/e2e/**/!(rateLimiting.cy.ts)'",
    "cypress:open:rate-limit": "cypress open --config specPattern='cypress/e2e/rateLimiting.cy.ts'",
    "cypress:run:rate-limit": "cypress run --config specPattern='cypress/e2e/rateLimiting.cy.ts'",
    "lint": "eslint . --ext .ts --report-unused-disable-directives --max-warnings 0",
    "prettier": "prettier . --check",
    "prod": "PRODUCTION=true npm run dev",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@repo/backend-utils": "*",
    "@repo/shared-utils": "*",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.5.1",
    "auth0": "^4.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-oauth2-jwt-bearer": "^1.6.0",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nocache": "^4.0.0",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@testing-library/cypress": "^10.0.2",
    "@types/jest": "^30.0.0",
    "cypress": "^15.1.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-cypress": "^3.0.3",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^16.3.0",
    "jest": "30.1.3",
    "msw": "^2.11.1",
    "prettier": "^3.2.5",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}
