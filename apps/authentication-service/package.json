{
  "name": "ucp-authentication-service",
  "version": "0.0.1",
  "description": "UCP Authentication Service",
  "type": "module",
  "scripts": {
    "dev": "tsc --noEmit && tsup ./src/index.ts --watch --onSuccess 'node ./dist/index.js'",
    "dev:rate-limit": "RATE_LIMIT_TEST=true npm run dev",
    "cypress:open": "cypress open --config specPattern='cypress/e2e/**/!(rateLimiting.cy.ts)'",
    "cypress:run": "cypress run --config specPattern='cypress/e2e/**/!(rateLimiting.cy.ts)'",
    "cypress:open:rate-limit": "cypress open --config specPattern='cypress/e2e/rateLimiting.cy.ts'",
    "cypress:run:rate-limit": "cypress run --config specPattern='cypress/e2e/rateLimiting.cy.ts'",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "prettier": "prettier . --check",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "sourcemap": true,
    "clean": true,
    "format": [
      "esm"
    ]
  },
  "dependencies": {
    "@repo/shared-utils": "*",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.5.1",
    "auth0": "^4.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-oauth2-jwt-bearer": "^1.6.0",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nocache": "^4.0.0",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.9",
    "@babel/preset-env": "^7.24.8",
    "@babel/preset-typescript": "^7.24.7",
    "@testing-library/cypress": "^10.0.2",
    "@types/jest": "^29.5.12",
    "babel-loader": "^9.1.3",
    "cypress": "^13.8.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-cypress": "^3.0.3",
    "eslint-plugin-jest": "^28.3.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "msw": "^2.3.4",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4"
  }
}
