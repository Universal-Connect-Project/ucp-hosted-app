{
  "name": "ucp-hosted-app",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Universal-Connect-Project/ucp-hosted-app.git"
  },
  "author": "",
  "bugs": {
    "url": "https://github.com/Universal-Connect-Project/ucp-hosted-app/issues"
  },
  "homepage": "https://github.com/Universal-Connect-Project/ucp-hosted-app#readme",
  "scripts": {
    "build": "turbo build",
    "heroku-postbuild": "npm run build --workspace=apps/institution-service && npm run build --workspace=apps/authentication-service",
    "dev": "npm run buildSharedUtils && turbo dev",
    "buildSharedUtils": "npm run build --workspace=packages/shared-utils",
    "lint": "turbo lint",
    "prettier": "turbo run prettier",
    "test": "turbo run test"
  },
  "devDependencies": {
    "husky": "^9.0.11",
    "turbo": "^2.1.2"
  },
  "engines": {
    "node": "20.x"
  },
  "packageManager": "npm@10.5.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
