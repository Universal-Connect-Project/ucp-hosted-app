{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "skipLibCheck": true,

    "allowJs": true,
    "checkJs": false,

    "strict": false,
    "alwaysStrict": false,

    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist",
    "outDir": "./dist",
    "typeRoots": [
      "../../node_modules/@types",
      "../../node_modules/@testing-library"
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"]
}
